@startuml

entity User {
  *id : Int
  --
  email : String
  password : String
  salt : String?
  createdAt : DateTime
  updatedAt : DateTime
}

entity Post {
  *id : Int
  --
  title : String
  content : String
  authorId : Int
  createdAt : DateTime
  updatedAt : DateTime
}

entity ChangeHistory {
  *id : Int
  --
  postId : Int
  change : String
  changedAt : DateTime
}

User ||--o{ Post : "posts"
Post ||--o{ ChangeHistory : "changeHistories"

@enduml